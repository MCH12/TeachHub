extends layout
block content
    .navbar-wrapper
      .container
        .navbar.navbar-inverse.navbar-static-top
          .container
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='.nav-collapse')
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='/') Teach Hub
            .nav-collapse.collapse
              ul.nav.navbar-nav
                li.active
                  a(href='/') Home
                li
                  a(href='/about') About
                li
                  a(href='/contact') Contact
    #myCarousel.carousel.slide
      ol.carousel-indicators
        li.active(data-target='#myCarousel', data-slide-to='0')
        li(data-target='#myCarousel', data-slide-to='1')
      .carousel-inner
        .item.active
          img(src='images/intro.jpg', alt='')
          .carousel-caption
            h1 Teachers
            ul
              li Sign up in minutes.
              li Get supply offers from schools directly. 
              li No more agency rates.
            p
              a.btn.btn-large.btn-primary(href='/teacher/signup') Sign up today
        .item
          img(src='/images/intro2.png', alt='')
          .container
            .carousel-caption
              h1 Schools
              ul
               li Search our live teacher listings 
               li Find the right supply teacher for you
               li Contact them immediately.
              p
                a.btn.btn-large.btn-primary(href='/search') Search Now
      a.left.carousel-control(href='#myCarousel', data-slide='prev')
        span.glyphicon.glyphicon-chevron-left
      a.right.carousel-control(href='#myCarousel', data-slide='next')
        span.glyphicon.glyphicon-chevron-right
    .container.marketing
      .row
        .col-lg-4
          img.img-circle(data-src='holder.js/140x140')
          h2 Teacher
          p Sign up for supply jobs in 3 minutes
          p Provide electronic copies of your ID, Qualification and DBS
          p Sit back and wait for your first job
          p Take home pay starts at £120 per day
          p
            a.btn.btn-default(href='teacher/signup') Sign up »
        .col-lg-4
          img.img-circle(data-src='holder.js/140x140')
          h2 Schools
          p We charge £10 per teacher placed per day
          p Live search for teachers
          p Choose the teacher you want to cover
          p
            a.btn.btn-default(href='/search') Search »
        .col-lg-4
          img.img-circle(data-src='holder.js/140x140')
          h2 Transparency
          p Our fees are transparent
          p We encourage schools to positively endorse supply teachers they are happy with to help them get more work in the future
          p We do not charge introduction fees if schools and teachers want to move to a more permanent arrangement
          p
            a.btn.btn-default(href='about') View details »
      footer
        p.pull-right
          a(href='#') Back to top
        p
          | © 2013 Teach Hub ·
